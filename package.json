{
  "name": "llmlayer",
  "version": "0.2.7",
  "description": "Official JavaScript / TypeScript SDK for the LLMLayer Web API for AI Agents",
  "type": "module",
  "sideEffects": false,
  "engines": { "node": ">=18.17" },

  "author": { "name": "Yassine Khazzan", "email": "yassine@llmlayer.ai", "url": "https://llmlayer.ai" },
  "license": "MIT",
  "repository": { "type": "git", "url": "https://github.com/YassKhazzan/llmlayer_js" },
  "bugs": { "url": "https://github.com/YassKhazzan/llmlayer_js/issues" },
  "homepage": "https://github.com/YassKhazzan/llmlayer_js#readme",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/cjs/client.js"
    },
    "./models": {
      "types": "./dist/models.d.ts",
      "import": "./dist/models.js",
      "require": "./dist/cjs/models.js"
    }
  },

  "main": "./dist/cjs/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],

  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json && tsc -p tsconfig.cjs.json && cp cjs-package.json dist/cjs/package.json",
    "dev": "tsx devtest.ts --all",
    "prepublishOnly": "npm run build"
  },

  "dependencies": {
    "undici": "^6.21.3"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },

  "browser": {
    "undici": false
  },

  "enginesStrict": true
}
